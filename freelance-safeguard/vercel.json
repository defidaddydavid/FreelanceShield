{
  "rewrites": [
    { "source": "/api/waitlist", "destination": "/api/waitlist.cjs" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; connect-src 'self' https://*.privy.io https://*.solana.com https://*.vercel-insights.com wss://*.privy.io https://api.devnet.solana.com https://api.mainnet-beta.solana.com https://*.supabase.co; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.privy.io; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://*.privy.io; font-src 'self' data:; frame-src 'self' https://*.privy.io https://*.walletconnect.com;"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/dashboard",
      "destination": "https://app.freelanceshield.xyz",
      "permanent": false
    },
    {
      "source": "/dashboard/(.*)",
      "destination": "https://app.freelanceshield.xyz/$1",
      "permanent": false
    }
  ],
  "github": {
    "enabled": true,
    "silent": false
  },
  "trailingSlash": false
}
