{
  "rewrites": [
    { "source": "/api/waitlist", "destination": "/api/waitlist.cjs" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "buildCommand": "npm run build:optimized",
  "outputDirectory": "dist",
  "framework": "vite",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "functions": {
    "api/**/*": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "redirects": [
    {
      "source": "/dashboard",
      "destination": "https://app.freelanceshield.xyz",
      "permanent": false
    },
    {
      "source": "/dashboard/(.*)",
      "destination": "https://app.freelanceshield.xyz/$1",
      "permanent": false
    }
  ],
  "github": {
    "enabled": true,
    "silent": false
  },
  "trailingSlash": false
}
